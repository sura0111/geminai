{
  "targetDefaults": {
    "lint": {
      "cache": true
    },
    "test": {
      "outputs": ["{projectRoot}/coverage"],
      "cache": true
    },
    "build": {
      "dependsOn": ["lint", "test", "^build"],
      "outputs": ["{projectRoot}/dist", "{projectRoot}/@types"],
      "cache": true
    },
    "publish": {
      "dependsOn": ["lint", "test", "build"],
      "cache": true
    }
  },
  "affected": {
    "defaultBase": "main"
  },
  "includeScripts": ["lint", "test", "build", "publish", "g:version"]
}
